{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
